<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LogAnalyzer.LogSources.FileLogSource"
                    xmlns:editor="clr-namespace:FileLogSource.Editor">

    <DataTemplate x:Key="FileLogEditorDataTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.ColumnSpan="2">Choose file...</Label>
            
            <Button Grid.Row="1" Grid.Column="0" Margin="4" Width="24" Height="24" Command="{Binding OpenFileCommand}">
                <Image Source="/Resources/Images/Open16.png" Width="16" Height="16" />
            </Button>

            <TextBox Grid.Row="1" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding Filename, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>